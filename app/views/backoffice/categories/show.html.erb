<div class="row purchace-popup">
  <div class="col-12">
    <span class="d-block d-md-flex align-items-center">
      <%= link_to "/backoffice/categories/new", class: "btn btn-success btn-lg btn-fw" do %>
        <i class="mdi mdi-plus-circle" style="color: white"></i>
        <span class="menu-title">Nova categoria</span>
      <% end %>
      <%= link_to "/backoffice/categories", class: "btn btn-primary btn-lg btn-fw" do %>
              <i class="mdi mdi-view-list" style="color: white"></i>
              <span class="menu-title">Listagem de categorias</span>
            <% end %>
    </span>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 grid-margin stretch-card">
        <div class="card card-statistics">
          <div class="card-body">
            <h3>Nome da categoria</h3>
            <p>
              <%= @category.name %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 grid-margin stretch-card">
        <div class="card card-statistics">
          <div class="card-body">
            <h3>Data de criação</h3>
            <p>
              <%= @category.created_at.strftime("%d/%m/%Y") %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 grid-margin stretch-card">
        <div class="card card-statistics">
          <div class="card-body">
            <h3>Última edição</h3>
            <p>
              <%= @category.updated_at.strftime("%d/%m/%Y") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="form-group">
          <%= link_to 'Editar', "/backoffice/categories/#{@category.id}/edit", class: 'btn btn-primary rounded' %>
          <%= link_to 'Voltar', backoffice_categories_path, class: 'btn btn-primary rounded' %>
        </div>
      </div>
    </div>

  </div>
</div>