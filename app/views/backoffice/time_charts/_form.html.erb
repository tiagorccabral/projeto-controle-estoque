<div class="card">
  <div class="card-body">
    <% if @time_chart.name == nil %>
      <h4 style="margin-bottom: 1rem">Ao criar um novo relatório, serão salvadas informações a respeito do valor e total de doações até o dia da criação deste relatório </h4>
    <% end %>
    <%= form_for [:backoffice, @time_chart] do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Nome do relatório</label>
            <div class="col-sm-9">
              <% if @time_chart.name != nil %>
                <%= f.text_field(:name,
                                 class: "form-control",
                                 placeholder: @time_chart.name,
                                 required: true) %>
              <% else %>
                <%= f.text_field(:name,
                                 class: "form-control",
                                 placeholder: "Ex: Relatório dia 15/06/19",
                                 required: true) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Dia do relatório</label>
            <div class="col-sm-9">
              <input class="form-control" name="report_date" id="datefield" type="datetime-local" min="2017-12-01T00:00:00.000" />
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit('Salvar', class: 'btn btn-success rounded') %>
        <%= link_to 'Voltar', backoffice_time_charts_path, class: 'btn btn-primary rounded' %>
      </div>
    <% end %>
  </div>
</div>